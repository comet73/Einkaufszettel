{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-View",
            "dependsOn": ["pwd", "printenv", "webpack-vendor", "webpack"],
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Einkaufszettel/View/View.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/Einkaufszettel/View" // Hier wurde das Arbeitsverzeichnis festgelegt
            }
        },
    ]
}